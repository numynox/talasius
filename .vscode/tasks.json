{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hugo-server",
            "type": "shell",
            "command": "hugo server",
            "options": {
                "env": {
                    "HUGO_PARAMS_AIRTABLERSVPLINKEN": "https://google.com/#EN",
                    "HUGO_PARAMS_AIRTABLERSVPLINKDE": "https://google.com/#DE",
                    "HUGO_PARAMS_AIRTABLERSVPLINKIT": "https://google.com/#IT"
                }
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Start building sites",
                        "endsPattern": "Web Server is available at"
                    }
                }
            ]
        }
    ]
}